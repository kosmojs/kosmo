{
  "type": "module",
  "name": "@kosmojs/cli",
  "version": "0.0.20",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "kosmo": "pkg/cli.js"
  },
  "exports": {
    ".": {
      "types": "./pkg/src/index.d.ts",
      "default": "./pkg/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "esbuilder src/cli.ts src/index.ts",
    "postbuild": "rsync -av --delete src/templates/ pkg/templates",
    "test": "vitest --root ../../.. --project core/cli"
  },
  "dependencies": {
    "@kosmojs/dev": "workspace:^",
    "@kosmojs/generators": "workspace:^",
    "concurrently": "^9.2.1",
    "prompts": "^2.4.2",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/prompts": "^2.4.9",
    "esbuild": "^0.27.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
