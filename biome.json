{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",

  "files": {
    "includes": [
      "vitest.config.js",
      "esbuilder/esbuilder.js",
      "docs/**/*.ts",
      "test/**/*.ts",
      "packages/*/*/{src,test}/**/*.ts",
      "packages/**/*.js",
      "!packages/*/*/test/**/@fixtures/**/lib/*"
    ]
  },

  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },

  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noUselessTernary": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "info",
          "options": {
            "ignoreRestSiblings": true
          }
        }
      },
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "strictCase": true,
            "requireAscii": true
          }
        }
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "noConsole": {
          "level": "info",
          "options": {
            "allow": ["assert", "error", "info", "warn"]
          }
        }
      }
    }
  },

  "overrides": [
    {
      "includes": ["packages/core/config/index.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noTemplateCurlyInString": "off"
          }
        }
      }
    },
    {
      "includes": ["**/test/**/*.ts", "./packages/**/src/templates/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/test/**/*.ts",
        "./esbuilder/esbuilder.js",
        "./packages/build/esbuilder/src/index.ts",
        "./packages/core/dev/src/base-plugin/api-handler.ts",
        "./packages/core/cli/src/**/*.ts",
        "./packages/core/kosmojs/src/*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ],

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":NODE:", ":BUN:"],
              ":BLANK_LINE:",
              [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:", "!@kosmojs/**"],
              ":BLANK_LINE:",

              [
                ":PACKAGE:",
                ":PACKAGE_WITH_PROTOCOL:",
                "@kosmojs/**",
                "!@kosmojs/**/*-generator"
              ],
              ":BLANK_LINE:",

              [
                ":PACKAGE:",
                ":PACKAGE_WITH_PROTOCOL:",
                "@kosmojs/**/*-generator"
              ],
              ":BLANK_LINE:",

              [":URL:"],
              ":BLANK_LINE:",

              [":ALIAS:"],
              ":BLANK_LINE:",

              [":PATH:", "!./templates/**"],
              ":BLANK_LINE:",

              [":PATH:"]
            ]
          }
        }
      }
    }
  }
}
